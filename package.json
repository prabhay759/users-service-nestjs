{
  "name": "users-service-nestjs",
  "version": "0.0.1",
  "description": "Users Service",
  "author": "Prabhay Gupta",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "generate:doc": "npx compodoc -p tsconfig.json -n 'Users Service' --output dist/documentation",
    "build": "npm run generate:doc && nest build",
    "build:perf": "nest build --path tsconfig.json",
    "build:prod": "NODE_ENV=production nest build --path tsconfig.prod.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:local:db": "docker-compose up db",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:watch": "npm run test -- --watch",
    "test:ci": "JEST_JUNIT_OUTPUT_DIR='./test-reports/unit' npm run test -- --ci --reporters='default' --reporters='jest-junit'",
    "test:cov": "npm run test -- --coverage",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/config/migration.config.ts",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate -n",
    "typeorm:migration:create": "npm run typeorm -- migration:create -n",
    "typeorm:migration:run": "npm run typeorm -- migration:run",
    "typeorm:migration:revert": "npm run typeorm migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/serve-static": "^2.1.3",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/terminus": "^7.0.1",
    "@nestjs/typeorm": "^7.1.4",
    "bintrees": "^1.0.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "lodash": "^4.17.19",
    "nestjs-pino": "^1.2.0",
    "p-pipe": "^3.1.0",
    "pg": "^8.2.1",
    "pino-pretty": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.26"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.2.3",
    "@types/lodash": "^4.14.155",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "benchmark": "^2.1.4",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "jest": "26.0.1",
    "jest-extended": "^0.11.5",
    "jest-junit": "^11.0.1",
    "prettier": "^1.19.1",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "setupFiles": [
      "./jest-setup.ts"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "rootDir": "src",
    "testRegex": "\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
